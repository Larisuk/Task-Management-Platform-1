
@{
    ViewBag.Title = "Afisaremembri";
}


<ol class="breadcrumb">
    <li><h3>Afișare Membri</h3></li>
</ol>

@foreach (var membr in ViewBag.users)
{<hr />
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>

        <p style="font-size:19px">
            @membr.UserName
            <div style="display: inline-block;margin-left:40rem;float : right">
                <form method="post" action="/Teams/AdaugaTask/@membr.Id">
                    @Html.HttpMethodOverride(HttpVerbs.Put)

                    <select name="TaskId">
                        @foreach (var task in ViewBag.tasks)
                        {
                            <option value="@task.TaskId">
                                @task.Title
                            </option>
                        }
                    </select>

                    <br />
                    <button style="border: none; background: transparent" type="submit">Asigneaza task.</button>
                </form>
            </div>
        </p>
    </div>
</div>

}