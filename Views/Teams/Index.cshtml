<a href="~/Content/Site.css" type="stylesheet"> </a>
@{
    ViewBag.Title = "Index";
}

<h1>@ViewBag.Message</h1>

<h2 style="text-align: center">Echipe</h2>

<!-- search -->
<div class="container">
    <br />
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <form class="card card-sm" method="GET">
                <div class="card-body row no-gutters align-items-center">
                    <div class="col-auto">
                        <i class="fas fa-search h4 text-body"></i>
                    </div>

                    <!--end of col-->
                    <div class="col">
                        <input class="form-control form-control-lg form-control-borderless" type="text" name="search"
                               value="@ViewBag.SearchString"
                               placeholder="Search teams">

                        <button class="btn btn-lg btn-success" type="submit">
                            Search
                        </button>
                    </div>
                    <!--end of col-->
                </div>
            </form>
        </div>
        <!--end of col-->
    </div>
</div>
<br />

<a class="btn btn-primary" href="/Teams/New">Adauga echipa.</a>
<br />
<br />

@if (ViewBag.total == 0)
{
    <h3>Nu exista echipe</h3>
}
else {
    foreach (var team in ViewBag.Teams)
    {
        <div class="panel panel-default">
            <div class="panel-heading">@team.Nume</div>
            <div class="panel-body">
                Creat de: <p>@team.User.UserName</p>
                <br />
                <span class="label label-info">Data inscriere:@team.DataInscriere</span>
                <br />
            </div>
            <div class="panel-footer">
                <a class="btn btn-sm btn btn-success" href="/Teams/Show/@team.TeamId">Afisare echipa.</a>
            </div>
        </div>
    }

    <!-- pagini -->
    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li>
                    @if (ViewBag.search != "")
                    {
                        <a href="/Teams/Index?page=1&search=@ViewBag.SearchString"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    }
                    else
                    {

                        <a href="/Teams/Index?page=1" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    }
                </li>
                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    if (ViewBag.search != "")
                    {
                        <li>
                            <a href="/Teams/Index?page=@i&search=@ViewBag.SearchString">@(i)</a>
                        </li>
                    }
                    else
                    {

                        <li><a href="/Teams/Index?page=@i">@(i)</a></li>
                    }
                }
                <li>
                    @if (ViewBag.search != "")
                    {
                        <a href="/Teams/Index?page=@(ViewBag.lastPage)&search=@ViewBag.SearchString" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    }
                    else
                    {

                        <a href="/Teams/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    }
                </li>
            </ul>
        </nav>
    </div>
}